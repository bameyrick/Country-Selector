{
  "compilerOptions": {
        "module": "commonjs",
        "target": "ES2017",
        "noImplicitAny": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "sourceMap": false,
        "allowJs": true,
        "types": [
          "node"
        ],
        "lib": [
           "dom",
           "es2017",
           "es2016.array.include"
         ]
    },
    "include": [
        "src/app/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
